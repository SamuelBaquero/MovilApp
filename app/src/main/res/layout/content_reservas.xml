<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/colorText"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_reservas"
    tools:context="co.edu.uniandes.isis2503.tbc.movilapp.ReservasActivity">
    <Button
        android:id="@+id/reservar_vcub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reservar_vcub"
        android:onClick="reservarVcub"
        android:drawableTop="@drawable/vcub_button"
        android:background="@color/colorText"/>
    <Button
        android:id="@+id/reservar_movibus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reservar_movibus"
        android:onClick="reservarMovibus"
        android:drawableTop="@drawable/movibus_button"
        android:background="@color/colorText"/>
</TableLayout>
